---
import { twMerge } from "tailwind-merge";
import { navbarLinks } from "../shared/data/navbarLinks";

interface Props {
  className?: string;
}

const { className } = Astro.props;
---

<nav
  id="sidebar"
  class={twMerge(
    "translate-x-[200%] xl:translate-x-0 border-l border-white fixed inset-y-0 my-auto right-0 h-fit w-[200px] transition-transform duration-500 ease-in-out",
    className
  )}
>
  <ul class="flex flex-col gap-2">
    {
      navbarLinks.map((link) => {
        return (
          <li class="">
            <a
              data-section={link.name.toLowerCase()}
              href={link.path}
              class={twMerge(
                `text-white text-xl pl-6 py-1.5 h-full block font-medium w-full nav-item`
              )}
            >
              {link.name}
            </a>
          </li>
        );
      })
    }
  </ul>
</nav>
