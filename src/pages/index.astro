---
import MainLayoutTopHeader from "../components/MainLayoutTopHeader.astro";
import MainLayout from "../layouts/MainLayout.astro";
---

<script>
    document.addEventListener("DOMContentLoaded", () => {
    const navIcon = document.querySelector('#nav-icon')!;
	const sidebar = document.querySelector('#sidebar')!;

    navIcon.addEventListener("click", () => {
        navIcon.classList.toggle("open");
		sidebar.classList.toggle("translate-x-[200%]");
    });
});
</script>

<MainLayout>
  <MainLayoutTopHeader />
  <section id="home" class="bg-primary h-[1000px] rounded-t-2xl">
    <h1 class="text-3xl font-bold underline">Hello world!</h1>
  </section>
  <section id="services" class="h-[1000px] bg-blue-500">Content for Section 2</section>
  <section id="experience" class="h-[1000px] bg-purple-500">Content for Section 3</section>
</MainLayout>
